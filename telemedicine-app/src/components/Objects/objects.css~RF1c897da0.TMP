.objbutton{
    width: 75%;
    justify-content: center;
    align-items: center;  
    background-color: rgb(48,172,251);  
    color: white;
    margin-top: 5px;
    margin-bottom: 5px;
    border-radius: 20px;
    border: none;
    font-size: 15pt;
    font-weight: 700;
    transition: .5s;
    outline: none;
    cursor: pointer;    
  }
  
  .objbutton:hover{    
    background-color: #7FFFD4;
    color: #1E90FF;
  }

  .objinputfile-input-hidden{
      width: 1px;
  }

  .objpopup-popup {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.2);
  
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .objpopup-popup-inner {
    position: relative;
    padding: 32px;
    width: 100%;
    max-width: 640px;
    background-color: white;
  }

    .objpopup-popup-inner .close-btn {
        position: absolute;
        top: 16px;
        right: 16px;
        width: 32px;
        height: 32px;
        opacity: 0.3;
    }